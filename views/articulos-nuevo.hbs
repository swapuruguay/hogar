<div class="container">
  <main>
    <div class="row">
        <div class="col-md-6" >
          <form id="formulario"  class="form-horizontal">
            <div class="form-group">
              <label for="codigo" class="col-md-12">C&oacute;digo</label>
              <div class="col-md-3">
                <input type="text" name="codigo" id="codigo" class="form-control">
              </div>
            </div>
            <div class="form-group">
              <label for="nombre" class="col-md-12">Nombre</label>
              <div class="col-md-6">
                <input type="text" name="nombre" id="nombre" class="form-control">
              </div>
            </div>
            <div class="form-group">
              <label for="descripcion" class="col-md-12">Descripci&oacute;n</label>
              <div class="col-md-12">
                <input type="text" name="descripcion" id="descripcion" class="form-control">
              </div>
            </div>
            <div class="form-group">
              <label for="medida" class="col-md-12">Medida</label>
              <div class="col-md-6">
                <select name="medida" id="medida" class="form-control">
                  {{#each lista}}
                      <option value="{{id_medida}}">{{abreviatura}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="minimo" class="col-md-12">Stock M&iacute;nimo</label>
                <div class="col-md-6">
                  <input type="text" name="minimo" id="minimo" class="form-control">
                </div>
            </div>
            <button class="btn btn-success" type="submit">Guardar</button>
          </form>
        </div>
      </div>
    </main>
  </div>
  <p></p>

  <script>
    let form = document.getElementById('formulario')
    form.addEventListener('submit', async (evt) => {
      evt.preventDefault()
      let data = new FormData(form)
      try {
        let res = await fetch('/articulos/', {
          method: 'POST',
          body: data
        })
        let respuesta = await res.json()
      } catch(err) {
        console.error(err)
      }
      
      
    })
  </script>